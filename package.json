{
    "scripts": {
        "frontend:install": "cd notebook/notes-frontend && npm install -f",
        "frontend:start": "cd notebook/notes-frontend && npm run start",
        "frontend:build": "cd notebook/notes-frontend && npm run build",
        "frontend:deploy": "cd notebook/notes-frontend && npm run deploy",

        "api:install": "cd notebook/notes-api && npm install .",
        "api:build": "cd notebook/notes-api && npm run build",
        "api:start": "cd notebook/notes-api && npm run dev",
        "api:deploy": "cd notebook/notes-api && npm run deploy",
        "deploy": "npm run api:deploy && npm run frontend:deploy"
    }
}
